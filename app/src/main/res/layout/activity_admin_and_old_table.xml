<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="24dp"
    android:paddingBottom="8dp"
    android:background="#bb8fce"
    tools:context=".AdminAndOldTable">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_background"
        android:padding="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="WELCOME"
        android:textColor="#F44336"
        android:textSize="24sp"
        android:textStyle="italic"
        android:fontFamily="cursive"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/AD_ed"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:drawableTint="#12a4d9"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_box"
        android:drawableStart="@drawable/name"
        android:drawablePadding="8dp"
        android:hint="Enter Table Name"
        android:fontFamily="serif"
        android:inputType="textPersonName"
        android:minHeight="40dp"
        android:paddingTop="8dp"
        android:textColorHint="#FFFF5722"
        android:textSize="16sp"
        tools:ignore="VisualLintTextFieldSize,TextContrastCheck"
        android:autofillHints="" />

    <EditText
        android:id="@+id/pass_ed"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text_box"
        android:drawableStart="@drawable/number"
        android:fontFamily="serif"
        android:drawablePadding="8dp"
        android:drawableTint="#12a4d9"
        android:hint="Enter Table Number"
        android:inputType="numberDecimal"
        android:minHeight="40dp"
        android:paddingTop="8dp"
        android:textColorHint="#FFFF5722"
        android:textSize="16sp"
        tools:ignore="VisualLintTextFieldSize,TextContrastCheck"
        android:autofillHints="" />

    <EditText
        android:id="@+id/table_capacity"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/capacity"
        android:fontFamily="serif"
        android:drawablePadding="8dp"
        android:background="@drawable/edit_text_box"
        android:drawableTint="#12a4d9"
        android:hint="Enter Table Capacity"
        android:inputType="number"
        android:minHeight="40dp"
        android:paddingTop="8dp"
        android:textColorHint="#FFFF5722"
        android:textSize="16sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Enter Admin Password"
        android:textColorHint="#FFFF5722"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:endIconMode="password_toggle"
        app:passwordToggleEnabled="true"
        app:endIconTint="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:fontFamily="serif"
            android:background="@drawable/edit_text_box"
            android:drawableStart="@drawable/password"
            android:drawablePadding="8dp"
            android:drawableTint="#12a4d9"
            android:inputType="textPassword"
            android:minHeight="40dp"
            android:paddingTop="8dp"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/BTN_Add_Table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2c3e50 "
        android:minHeight="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="Add Table"
        android:fontFamily="monospace"

        android:textColor="#E91E63"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="VisualLintButtonSize,TextContrastCheck,TouchTargetSizeCheck"
        style="?android:attr/buttonBarButtonStyle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you Admin"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textStyle="bold" />


    <Button
        android:id="@+id/BTN_ADMIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2c3e50 "
        android:layout_marginStart="8dp"
        android:text="Admin"
        android:fontFamily="monospace"

        android:textColor="#C2185B"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="VisualLintButtonSize,VisualLintBounds"
        style="?android:attr/buttonBarButtonStyle" />

    <Button
        android:id="@+id/BTN_Back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="right"
        android:backgroundTint="#f1c40f"
        android:text="Back"
        android:fontFamily="monospace"
        android:textColor="#C2185B"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="VisualLintButtonSize" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_3"
    tools:context=".WelcomePage">



    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to MenuMade"
        android:textSize="28sp"
        android:textColor="#E91E63"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover Your Taste, Enjoy Every Moment"
        android:textSize="16sp"
        android:textColor="#F80909"
        android:fontFamily="serif"
        android:layout_below="@id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/signInPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to Explore?"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:layout_below="@id/subtext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp" />


    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textColor="@android:color/white"
        android:backgroundTint="#ff8c00"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/getStartedButton"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="30dp"
        android:backgroundTint="#4682b4"
        android:text="Admin"
        android:textColor="@android:color/white"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/accountPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an registred Table? or you are admin!"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:layout_below="@id/getStartedButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Handcrafted with Care by MenuMade Team"
        android:textSize="14sp"
        android:textColor="#FF5722"
        android:fontFamily="cursive"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

</RelativeLayout>
